{
  "manifest_version": 3,
  "name": "Screenshot Annotator",
  "version": "1.0",
  "description": "Take screenshots and annotate them with arrows, text, and highlights. Save to organized folders.",
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icon16.png"
  }
}
